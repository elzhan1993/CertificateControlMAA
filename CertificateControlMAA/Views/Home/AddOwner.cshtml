
@{
    ViewBag.Title = "AddOwner";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2> Добавить сотрудника</h2>
<div>
    <h3>Форма добавления нового сотрудника</h3>
    <form method="post" action="">
        <input type="hidden" name="departmentID" value="@ViewBag.dep_id" />
        <table>
            <tr>
                <td><p>Имя</p></td>
                <td><input type="text" name="name" required/> </td>
            </tr>
            <tr>
                <td><p>Фамилия</p></td>
                <td><input type="text" name="surname" required/> </td>
            </tr>
            <tr>
                <td><p>Отчество</p></td>
                <td><input type="text" name="secondName" /> </td>
            </tr>
            <tr>
                <td><p>Дата рождения</p></td>
                <td><input type="text" name="birthDate" required/> </td>
            </tr>
            <tr>
                <td><p>Должность</p></td>
                <td><input type="text" name="position" required/> </td>
            </tr>
            <tr>
                <td><p>Пол</p></td>
                <td>
                    <select name="sex" required>

                            <option value="true">Мужской</option>
                            <option value="false">Женский</option>
                    </select>
                </td>
            </tr>
            
            <tr>
                <td><p>E-mail</p></td>
                <td><input type="text" name="email"  /> </td>
            </tr>
            <tr>
                <td><p>ИИН</p></td>
                <td><input type="text" name="IIN" required /> </td>
            </tr>
            <tr>
                <td><p>Телефон</p></td>
                <td><input type="text" name="phone_number"  /> </td>
            </tr>
            <tr><td><input type="submit" value="Добавить" /> </td><td></td></tr>
           
        </table>
    </form>
</div>

